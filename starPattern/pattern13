var n = 5;
for(var i=1; i<n; i++)
{
    var str = "";
    for(var j=1; j<=i; j++)
    {
        str += "-";
    }
    // console.log(str);
    for(var k=i; k<=n; k++)
    {
        str += "*";
    }
    console.log(str);
}

for(var i=1; i<=n; i++)
{
    var strn = "";
    for(var j=i; j<=n; j++)
    {
        strn += " ";
    }
    // console.log(strn);
    for(var k=1; k<=i; k++)
    {
        strn += "*";
    }
    console.log(strn);
}