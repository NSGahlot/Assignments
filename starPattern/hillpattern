var n = 5;
for(var i=1; i<=n; i++)
{
  var str = "";
  for(var j=i; j<=n; j++)
  {
    str = str + "-"; // decreasing triangle
  }
  // console.log(str);
  for(var k=1; k<i; k++)
  {
    str = str + "*";
  }
  // console.log(str); // increasing triangle
  for(var l=1; l<=i; l++)
  {
    str = str + "*";
  }
  console.log(str); // increasing triangle
}